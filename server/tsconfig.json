{
  "files": ["app.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["ES2020"]
  },
  "include": ["/**/*.ts", "types/*"],
  "exclude": ["node_modules"]
}
